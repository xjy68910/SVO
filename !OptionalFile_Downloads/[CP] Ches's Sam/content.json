            "Value": "MermaidPendantOverlay",
            "When":
            {
                "EnableMermaidPendants": "true"
            }
        },
    ],

    "ConfigSchema":
    {
        "SwimSuitsEnabled":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Enables the villagers wearing swimsuits when at the beach or during beach-location festivals."
        },
        "EnableMermaidPendants":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Enables mermaid pendant overlays for engaged/married NPCs. Portraits only."
        },
        "SamEyeColor":
        {
            "AllowValues": "blue, green",
            "Default": "blue",
            "Description": "Changes the color of Sam's eyes."
        }
    },

    "Changes": [

        // Sam

        {
            "LogName": "Sam Main",
            "Action": "EditImage",
            "Target": "Characters/Sam, Portraits/Sam",
            "FromFile": "{{Target}}/{{SamEyeColor}}/Sam_{{season}}{{IndoorVariant}}{{WeatherVariant}}.png",
            "When":
            {
                "SamEyeColor": "blue, green",
                "HasFile:{{FromFile}}": true,
            },
            "Update": "OnLocationChange"
        },
        {
            "LogName": "Sam Main",
            "Action": "EditImage",
            "Target": "Characters/Sam, Portraits/Sam",
            "FromFile": "{{Target}}/{{SamEyeColor}}/Sam_{{season}}{{WeatherVariant}}.png",
            "When":
            {
                "SamEyeColor": "blue, green",
                "HasFile:{{FromFile}}": true,
            },
            "Update": "OnLocationChange"
        },

        // Sam Main

        {
            "LogName": "Sam Summer Main",
            "Action": "EditImage",
            "Target": "Characters/Sam, Portraits/Sam",
            "FromFile": "{{Target}}/{{SamEyeColor}}/Sam_{{Season}}{{IndoorVariant}}{{WeatherVariant}}_{{Random:1, 2 |key=SamSummerVariant}}.png",
            "When":
            {
                "Season": "summer",
                "SamEyeColor": "blue, green",
                "HasFile:{{FromFile}}": true,
            },
            "Update": "OnLocationChange"
        },

        // Sam Mermaid Pendant       

        {
            "LogName": "Sam Summer - Mermaid Pendant",
            "Action": "EditImage",
            "Target": "Portraits/Sam",
            "FromFile": "Portraits/{{MermaidPendantOverlay}}/{{MermaidPendantOverlay_Relationship}}/Sam_{{Season}}{{IndoorVariant}}{{WeatherVariant}}_{{Random:1, 2 |key=SamSummerVariant}}.png",
            "When":
            {
                "Season": "summer",
                "HasFile:{{FromFile}}": true,
            },
            "PatchMode": "Overlay",
            "Update": "OnLocationChange"
        },

        // B E G I N  F E S T I V A L 

        {
            "LogName": "Festival Character Sprites",
            "Action": "EditImage",
            "Target": "Characters/Sam, Portraits/Sam",
            "FromFile": "{{TargetPathOnly}}/{{SamEyeColor}}/Festivals/{{Festival}}/{{TargetWithoutPath}}_{{Festival}}.png",
            "When":
            {
                "SamEyeColor": "blue, green",
                "HasFile:{{FromFile}}": true,
            },
            "Update": "OnLocationChange"
        },

        // Sam

        {
