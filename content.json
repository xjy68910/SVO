    "ConfigSchema":
    {
        "SwimSuitsEnabled":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Enables the villagers wearing swimsuits when at the beach or during beach-location festivals."
        },
        "EnableMermaidPendants":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Enables mermaid pendant overlays for engaged/married NPCs. Portraits only."
        },
        "WeddingStyle":
        {
            "AllowValues": "VCSO, DesertDove, SCS, Vanilla",
            "Default": "DesertDove",
            "Description": "The style of wedding outfit. See the wiki/list of options for previews."
        },
        "EnableFlowerQueen":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Allows other NPCs to be crowned flower queen besides Haley."
        },
        "AllowBachelorsToBeFlowerKing":
        {
            "AllowValues": "true, false",
            "Default": "true",
            "Description": "Allows the bachelors to be crowned flower king."
        },

        // Seasonal Villager Outfits 

        // Emily

        "EmilyTattoos":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enables tattoo overlays for Emily."
        },       

        // Haley

        "HaleyCowPhotoVariant":
        {
            "AllowValues": "Seasonal, Vanilla",
            "Default": "Seasonal",
            "Description": "Changes Haley's 8-heart event photos to be seasonal or vanilla."
        },

        // Harvey

        "HarveyFacialHair":
        {
            "AllowValues": "Mustache, Shaved",
            "Default": "Mustache",
            "Description": "Keeps Harvey's mustache or shaves it off."
        },
        "HarveyEyeColor":
        {
            "AllowValues": "Green, Brown",
            "Default": "Green",
            "HarveyEyeColor": "Changes the color of Harvey's eyes."
        },

        // Maru - Effects the Character sprite only.

        "MaruGlasses":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enables glasses overlays for Maru. Character only."
        },

        // Sandy

        "SandyEnabled":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enable SVO for Sandy."
        },

        // Sebastian

        "SebastianGlasses":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enables glasses overlay for Sebastian. Can toggle both glasses & piercings."
        },
        "SebastianPiercings":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enables piecings over for Sebastian. Can toggle both glasses & piercings."
        },

        // Wizard

        "WizardEnabled":
        {
            "AllowValues": "true, false",
            "Default": "false",
            "Description": "Enable SVO for the Wizard."
        },

        // Swimsuit Config

        // Linus Swimsuit

        "LinusSwimVariant":
        {
            "AllowValues": "Censored, GrassSkirt",
            "Default": "Censored",
            "Description": "Changes Linus's swim outfit to either be censored with a black bar or give him a grass skirt. Character only."
        },
    },

